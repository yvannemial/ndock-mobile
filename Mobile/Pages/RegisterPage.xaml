<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Mobile.Pages.RegisterPage"
             BackgroundColor="{StaticResource White}">
    <ContentPage.Content>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <!-- Header -->
            <StackLayout Grid.Row="0" Spacing="5" Padding="24" BackgroundColor="{StaticResource Primary}">
                <Label Text="Register"
                       FontSize="32"
                       FontAttributes="Bold"
                       TextColor="{StaticResource White}"
                       Margin="0,10,0,0" />
                <StackLayout Orientation="Horizontal" Margin="0,5,0,0" Spacing="8">
                    <Label Text="Already have an account?"
                           TextColor="{StaticResource White}"
                           VerticalOptions="Center" />
                    <Label Text="Log In"
                           TextColor="{DynamicResource Secondary}"
                           FontAttributes="Bold"
                           VerticalOptions="Center">
                        <Label.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnLoginLinkTapped" />
                        </Label.GestureRecognizers>
                    </Label>
                </StackLayout>
            </StackLayout>

            <!-- Step 1 -->
            <ScrollView Grid.Row="1" x:Name="Step1Layout" TranslationX="0" Padding="24">
                <StackLayout Spacing="20" Margin="0,10,0,0">
                    <StackLayout>
                        <Label Text="First Name"
                               Margin="5,0,0,5" />
                        <Border
                            Stroke="{AppThemeBinding Light={StaticResource Gray300}, Dark={StaticResource Gray600}}"
                            StrokeShape="RoundRectangle 12"
                            Padding="16,0"
                            HeightRequest="50">
                            <Entry x:Name="FirstNameEntry"
                                   VerticalOptions="Center" />
                        </Border>
                    </StackLayout>

                    <StackLayout>
                        <Label Text="Last Name"
                               Margin="5,0,0,5" />
                        <Border
                            Stroke="{AppThemeBinding Light={StaticResource Gray300}, Dark={StaticResource Gray600}}"
                            StrokeShape="RoundRectangle 10"
                            Padding="15,0"

                            HeightRequest="50">
                            <Entry x:Name="LastNameEntry"
                                   VerticalOptions="Center" />
                        </Border>
                    </StackLayout>

                    <StackLayout>
                        <Label Text="Email"
                               Margin="5,0,0,5" />
                        <Border
                            Stroke="{AppThemeBinding Light={StaticResource Gray300}, Dark={StaticResource Gray600}}"
                            StrokeShape="RoundRectangle 10"
                            Padding="15,0"

                            HeightRequest="50">
                            <Entry x:Name="EmailEntry"
                                   Keyboard="Email"
                                   VerticalOptions="Center" />
                        </Border>
                    </StackLayout>

                    <Button Text="Next"
                            BackgroundColor="{DynamicResource Primary}"
                            TextColor="White"
                            CornerRadius="25"
                            HeightRequest="50"
                            FontAttributes="Bold"
                            Margin="0,20,0,0"
                            Clicked="OnNextButtonClicked" />
                </StackLayout>
            </ScrollView>

            <!-- Step 2 -->
            <ScrollView Grid.Row="1" x:Name="Step2Layout" TranslationX="1000" IsVisible="False" Padding="24">
                <StackLayout Spacing="20" Margin="0,10,0,0">
                    <StackLayout>
                        <Label Text="Phone Number"
                               Margin="5,0,0,5" />
                        <Border
                            Stroke="{AppThemeBinding Light={StaticResource Gray300}, Dark={StaticResource Gray600}}"
                            StrokeShape="RoundRectangle 10"
                            Padding="0"

                            HeightRequest="50">
                            <Grid ColumnDefinitions="Auto,*">
                                <Border Grid.Column="0"
                                        Stroke="{AppThemeBinding Light={StaticResource Gray300}, Dark={StaticResource Gray600}}"
                                        Padding="10,0"
                                        HeightRequest="50"
                                        WidthRequest="70">
                                    <StackLayout Orientation="Horizontal" VerticalOptions="Center" Spacing="4">
                                        <Label Text="+"
                                               VerticalOptions="Center" />
                                        <Label Text="237"
                                               VerticalOptions="Center"/>
                                    </StackLayout>
                                </Border>
                                <Entry Grid.Column="1"
                                       x:Name="PhoneNumberEntry"
                                       Keyboard="Telephone"
                                       VerticalOptions="Center"
                                       Margin="10,0,0,0" />
                            </Grid>
                        </Border>
                    </StackLayout>

                    <StackLayout>
                        <Label Text="Set Password"
                               Margin="5,0,0,5" />
                        <Border
                            Stroke="{AppThemeBinding Light={StaticResource Gray300}, Dark={StaticResource Gray600}}"
                            StrokeShape="RoundRectangle 10"
                            Padding="15,0"

                            HeightRequest="50">
                            <Grid>
                                <Entry x:Name="PasswordEntry"
                                       IsPassword="True"
                                       VerticalOptions="Center" />
                                <Image Source="eye_icon.png"
                                       HorizontalOptions="End"
                                       VerticalOptions="Center"
                                       HeightRequest="20"
                                       WidthRequest="20"
                                       Margin="0,0,10,0">
                                    <Image.GestureRecognizers>
                                        <TapGestureRecognizer Tapped="OnTogglePasswordVisibility" />
                                    </Image.GestureRecognizers>
                                </Image>
                            </Grid>
                        </Border>
                    </StackLayout>

                    <StackLayout>
                        <Label Text="Confirm Password"
                               Margin="5,0,0,5" />
                        <Border
                            Stroke="{AppThemeBinding Light={StaticResource Gray300}, Dark={StaticResource Gray600}}"
                            StrokeShape="RoundRectangle 10"
                            Padding="15,0"

                            HeightRequest="50">
                            <Grid>
                                <Entry x:Name="ConfirmPasswordEntry"
                                       IsPassword="True"
                                       VerticalOptions="Center" />
                                <Image Source="eye_icon.png"
                                       HorizontalOptions="End"
                                       VerticalOptions="Center"
                                       HeightRequest="20"
                                       WidthRequest="20"
                                       Margin="0,0,10,0">
                                    <Image.GestureRecognizers>
                                        <TapGestureRecognizer Tapped="OnToggleConfirmPasswordVisibility" />
                                    </Image.GestureRecognizers>
                                </Image>
                            </Grid>
                        </Border>
                    </StackLayout>

                    <Button x:Name="RegisterButton"
                            Text="Register"
                            BackgroundColor="{DynamicResource Primary}"
                            TextColor="White"
                            CornerRadius="25"
                            HeightRequest="50"
                            FontAttributes="Bold"
                            Margin="0,20,0,0"
                            Clicked="OnRegisterButtonClicked" />
                </StackLayout>
            </ScrollView>

            <!-- Loading Indicator -->
            <ActivityIndicator x:Name="LoadingIndicator"
                               Grid.Row="1"
                               IsVisible="False"
                               IsRunning="False"
                               HorizontalOptions="Center"
                               VerticalOptions="Center"
                               Color="{StaticResource Primary}"
                               HeightRequest="50"
                               WidthRequest="50" />
        </Grid>
    </ContentPage.Content>
</ContentPage>